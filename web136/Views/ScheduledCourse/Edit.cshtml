@model web136.Models.Schedule.PLScheduledCourse

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Schedule</h2>
<div id="EditSchedule"></div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true) 

    <fieldset>
        <legend>Fields</legend>

        <div class="editor-label">
                @Html.LabelFor(model => model.schedule_id) 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.schedule_id, new { @autocomplete = "off", @readonly = true }) 
                @Html.ValidationMessageFor(model => model.schedule_id) 
            </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.year)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.year)
            @Html.ValidationMessageFor(model => model.year)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.quarter)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.quarter)
            @Html.ValidationMessageFor(model => model.quarter)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.session)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.session)
            @Html.ValidationMessageFor(model => model.session)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.course.id)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.course.id)
            @Html.ValidationMessageFor(model => model.course.id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.course.title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.course.title)
            @Html.ValidationMessageFor(model => model.course.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.course.description)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.course.description)
            @Html.ValidationMessageFor(model => model.course.description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.course.courseLevel)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.course.courseLevel)
            @Html.ValidationMessageFor(model => model.course.courseLevel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.course.units)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.course.units)
            @Html.ValidationMessageFor(model => model.course.units)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.dayID)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.dayID)
            @Html.ValidationMessageFor(model => model.dayID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.timeID)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.timeID)
            @Html.ValidationMessageFor(model => model.timeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.day)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.day)
            @Html.ValidationMessageFor(model => model.day)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.time)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.time)
            @Html.ValidationMessageFor(model => model.time)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.instructorID)
        </div>
