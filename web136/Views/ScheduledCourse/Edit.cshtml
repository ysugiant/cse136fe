        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.lastName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>

}

<div>
    @Html.ActionLink("Create Scheduled Course", "Create") <br />
    @Html.ActionLink("Delete Scheduled Course", "Delete") <br />
    @Html.ActionLink("Get Scheduled Course", "Get") <br />
    @Html.ActionLink("Get Scheduled Course List", "List") <br />
</div>
