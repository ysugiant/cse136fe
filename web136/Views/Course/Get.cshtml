@model web136.Models.Course.PLCourse


@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get Course</h2>
<div id="GetCourse"></div>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true) 
        
        <fieldset>
            <legend>Fields</legend>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.id) 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.id, new { @autocomplete = "off", @readonly=true}) 
                @Html.ValidationMessageFor(model => model.id) 
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.title) 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.title, new { @autocomplete = "off", @readonly=true})
                @Html.ValidationMessageFor(model => model.title) 
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.description) 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.description, new { @autocomplete = "off", @readonly=true}) 
                @Html.ValidationMessageFor(model => model.description) 
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.prerequisiteList) 
            </div>
            <!--foreach (var item in Model.prerequisiteList)-->
            @for (int i = 0; i < Model.prerequisiteList.Count; i++) 
            {
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.prerequisiteList[i].title, new { @autocomplete = "off", @readonly=true}) 
                    @Html.ValidationMessageFor(model => model.prerequisiteList) 
                </div>
            }

        </fieldset>
    } 

    <div>
        @Html.ActionLink("Back to List", "Index") 
    </div>

