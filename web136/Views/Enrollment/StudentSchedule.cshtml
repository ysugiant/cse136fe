@model IEnumerable<web136.Models.Enrollment.PLEnrollment>

@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Schedule</h2>

<table id="tableScheduleList">
    <tr>
        <th>Drop</th>
        <th>Quarter</th>
        <th>Year</th>
        <th>Course Title</th>
        <th>Course Description</th>
        <th>Unit</th>
        <th>Instructor</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Drop", "Delete", new{stID= item.studentID, schID= item.scheduledCourse.schedule_id})
            </td>
            <td>
                @item.scheduledCourse.quarter
            </td>
            <td>
                @item.scheduledCourse.year
            </td>
            <td>
                @item.scheduledCourse.course.title
            </td>
            <td>
                @item.scheduledCourse.course.description
            </td>
            <td>
                @item.scheduledCourse.course.units
            </td>
            <td>
                @item.scheduledCourse.firstName @item.scheduledCourse.lastName
            </td>
        </tr>
    
    }

</table>
